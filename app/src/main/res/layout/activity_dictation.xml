<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/dication_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="15dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/preivew"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#BBBBBB"
                android:fontFamily="@font/font"
                android:textSize="220sp" />

            <com.myscript.atk.scw.SingleCharWidget
                android:id="@+id/widget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/float_transparent" />

        </FrameLayout>

        <ImageButton
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginStart="40dp"
            android:background="@color/float_transparent"
            android:scaleType="fitXY"
            android:src="@drawable/menu_backbutton" />

        <TextView
            android:id="@+id/dictation_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/hint_btn"
            android:layout_toEndOf="@id/backbutton"
            android:gravity="center"
            android:fontFamily="@font/baemin"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/hint_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/hint_btn"
            android:background="@color/float_transparent"
            android:scaleType="fitXY"
            android:visibility="invisible"
            android:src="@drawable/hint_notload" />

        <ImageButton
            android:id="@+id/hint_btn"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/speaker_btn"
            android:background="@color/float_transparent"
            android:scaleType="fitXY"
            android:src="@drawable/hint" />

        <ImageButton
            android:id="@+id/speaker_btn"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/clear_btn"
            android:background="@color/float_transparent"
            android:scaleType="fitXY"
            android:src="@drawable/speaker" />

        <ImageButton
            android:id="@+id/clear_btn"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="40dp"
            android:background="@color/float_transparent"
            android:scaleType="fitXY"
            android:src="@drawable/eraser_black" />
    </RelativeLayout>
</RelativeLayout>