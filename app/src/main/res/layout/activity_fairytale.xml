<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.welfarerobotics.welfareapplcation.util.TypeWriterView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fairy_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/baemin"
            android:gravity="center"
            android:textColor="@color/com_kakao_button_text_press"
            android:textSize="30sp"
            android:background="@color/white"
            android:text="치르지르와 미치르는 잠이 오지 않았어요."/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center"
            android:background="@drawable/open_book"

            android:orientation="vertical" />
    </FrameLayout>

</LinearLayout>