        switch (test){
            case 1:
                eyes.setImageResource(R.drawable.sad_sad_eye);
                mouse.setImageResource(R.drawable.depressed_mouse);
                break;
            case 2:
                eyes.setImageResource(R.drawable.very_sad_eye);
                mouse.setImageResource(R.drawable.depressed_mouse);
                break;
            case 3:
                eyes.setImageResource(R.drawable.good_eye);
                mouse.setImageResource(R.drawable.good_mouse);
                break;
            case 4:
                eyes.setImageResource(R.drawable.eye_do_not_see);
                mouse.setImageResource(R.drawable.depressed_mouse);
                break;
            case 5:
                Glide.with(this).asGif().load(R.raw.ohooo_eye).into(eyes);
                mouse.setImageResource(R.drawable.smile_mouse);
                break;
            case 6:
                eyes.setImageResource(R.drawable.good_eye);
                mouse.setImageResource(R.drawable.normal_mouse);
                break;
            case 7:
                eyes.setImageResource(R.drawable.normal_eye);
                mouse.setImageResource(R.drawable.normal_mouse);
                test=0;
                break;



        }
        test++;